cd C:\PDA\Resources\hsqldb-2.2.8\hsqldb\lib
java -cp ./hsqldb.jar org.hsqldb.server.Server --database.0 file:mydb --dbname.0 restDB


#------------------------------------#
# 			SQL scripts              #
#------------------------------------#
CREATE TABLE PERSON(
	ID INT PRIMARY KEY,
	NAME VARCHAR(100),
	AGE INT
)

CREATE TABLE ADDRESS(
	ID INT GENERATED BY DEFAULT AS IDENTITY(START WITH 1) PRIMARY KEY,
	VOIE VARCHAR(100),
	CODE INT,
	VILLE VARCHAR(100),
	ID_PERSON INT,
	FOREIGN KEY(ID_PERSON) REFERENCES PERSON (ID)
	
)

